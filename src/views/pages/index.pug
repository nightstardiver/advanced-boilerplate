extends ../main.layout.pug

block content
    .main-section
        .container
            header.header
                .header__left
                .header__right
                    button.btn.btn--view--rounded(tabindex='1') Авторизоваться                        
                    section.center-block
                        .welcome
                            .welcome__box
                                .user.welcome__user
                                    .user__photo(style="background-image: url('./assets/images/photo.jpg');")
                                    .user__description
                                        .user__title Галанова Елена
                                        .user__text Личный сайт веб-разработчика
                                    .socials.socials--view--transparent.socials--color--green.welcome__social
                                        ul.socials__list
                                            li.socials__item
                                                a.socials__link(href='//vk.com', target='_blank')
                                                    svg.socials__icon
                                                        use(xlink:href='./assets/images/icons/sprite.svg#vk')
                                            li.socials__item
                                                a.socials__link(href='//github.com', target='_blank')
                                                    svg.socials__icon
                                                        use(xlink:href='./assets/images/icons/sprite.svg#github')
                                            li.socials__item
                                                a.socials__link(href='//linkedin.com', target='_blank')
                                                    svg.socials__icon
                                                        use(xlink:href='./assets/images/icons/sprite.svg#in')
                                        nav.menu.welcome__menu
                                            ul.menu__list
                                                li.menu__item
                                                    a.menu__link(href='works.html') Мои работы
                                                li.menu__item
                                                    a.menu__link(href='about.html') Обо мне
                                                li.menu__item
                                                    a.menu__link(href='blog.html') Блог
        footer.footer.footer--bg--transparent
            .footer__bot
                .copyright
        small.copyright__text Елена Галанова | создано с любовью в Loftschool | 2018
   
